/*
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.sentry.io; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: blob: https: *.cloudflare.com *.r2.cloudflarestorage.com; connect-src 'self' https://legaldocs-api.a-m-zein.workers.dev https://*.sentry.io https://openrouter.ai wss://*; frame-ancestors 'none'; form-action 'self'; base-uri 'self'; object-src 'none'; upgrade-insecure-requests

  # Prevent clickjacking
  X-Frame-Options: DENY

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # XSS Protection
  X-XSS-Protection: 1; mode=block

  # Referrer Policy
  Referrer-Policy: strict-origin-when-cross-origin

  # Permissions Policy
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=()

  # Strict Transport Security (2 years)
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload

# Cache static assets
/static/*
  Cache-Control: public, max-age=31536000, immutable

/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Don't cache HTML pages
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache

# Don't cache auth pages
/*/auth/*
  Cache-Control: no-store, no-cache, must-revalidate, private
  Pragma: no-cache
