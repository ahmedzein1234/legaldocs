# E2E Test Environment Variables
# Copy this file to .env.test and update with your test values

# Base URLs
BASE_URL=http://localhost:3000
API_URL=http://localhost:4001

# Test User Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=Password123!
TEST_USER_NAME=Test User

# Admin User Credentials (optional)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=AdminPass123!

# Lawyer User Credentials (optional)
LAWYER_EMAIL=lawyer@example.com
LAWYER_PASSWORD=LawyerPass123!

# Test Configuration
TEST_TIMEOUT=30000
HEADLESS=true
SLOW_MO=0

# API Configuration
API_TIMEOUT=10000
API_RETRY_COUNT=3

# Browser Configuration
BROWSER=chromium  # chromium, firefox, webkit, or all
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Screenshot and Video Settings
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# Locale Settings
DEFAULT_LOCALE=en
TEST_LOCALES=en,ar

# Feature Flags (if applicable)
ENABLE_AI_FEATURES=true
ENABLE_BLOCKCHAIN=true
ENABLE_OCR=true

# Test Data
TEST_DOCUMENT_PATH=./test-fixtures/sample-document.pdf
TEST_IMAGE_PATH=./test-fixtures/test-image.jpg

# Debugging
DEBUG=false
PWDEBUG=0
